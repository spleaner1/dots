#
# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# program launcher
super + d
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + alt + v
	herbe volume $(volume v)%

XF86AudioRaiseVolume
	sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +5%" && herbe volume $(volume v)%

XF86AudioLowerVolume
	sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -5%" && herbe volume $(volume v)%

XF86AudioMute
	pactl set-sink-mute 0 toggle && herbe $(volume m)
