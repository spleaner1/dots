XF86AudioRaiseVolume
	pamixer -i 5 && herbe volume $(volume v)

XF86AudioLowerVolume
	pamixer -d 5 && herbe volume $(volume v)

XF86AudioMute
	pamixer -t && herbe volume $(volume m)
